<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.crane.answer.mapper.UserAnswerMapper">


    <select id="selectAppAnswerResultCount" resultType="com.crane.answer.model.dto.statistic.AppAnswerResultCountDTO"
            parameterType="java.lang.Long">
        select result_name, count(result_name) as resultCount
        from user_answer
        where app_id = #{appId}
        group by result_name
        order by resultCount desc
    </select>
</mapper>
